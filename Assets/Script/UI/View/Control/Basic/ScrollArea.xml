<!-- params: X=0, Y=0, Width, Height -->
<Dorothy>
	<Import Module="UI.View.Shape.SolidRect"/>

	<Node Name="panel" X="{ x or 0 }" Y="{ y or 0 }" TouchEnabled="True" SwallowTouches="True">
		<ClipNode Name="area" Width="{ width }" Height="{ height }" TouchEnabled="True" SwallowMouseWheel="True" Ref="True">
			<Stencil>
				<SolidRect Width="{ width }" Height="{ height }" Ref="True"/>
			</Stencil>
			<Menu Name="view" AnchorX="0" AnchorY="0" Width="{ width }" Height="{ height }" RenderGroup="True" Ref="True"/>
		</ClipNode>
	</Node>
</Dorothy>
