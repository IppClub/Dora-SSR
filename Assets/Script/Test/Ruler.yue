_ENV = Dora!
import "UI.Control.Basic.Ruler"
import "UI.Control.Basic.CircleButton"

ruler = Ruler {
	x: 0
	y: 0
	width: 600
	height: 150
	fontName: "sarasa-mono-sc-regular"
	fontSize: 30
}

with CircleButton {
		text: "显示"
		y: -200
		radius: 60
		fontSize: 40
	}
	\slot "Tapped", ->
		if .text == "显示"
			.text = "隐藏"
			ruler\show 0, 0, 100, 10, (value) ->
				print value
		else
			.text = "显示"
			ruler\hide!
