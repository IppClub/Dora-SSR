type RenderTarget :struct{ Object }

func RenderTargetFrom(raw: i64) => *RenderTarget {
	if raw == 0 {
		return nil
	}
	object := RenderTarget{}
	object.raw = &raw
	runtime.SetFinalizer(object.raw, ObjectFinalizer)
	result := &object
	return result
}
func RenderTarget.GetTypeId() => i32 {
	return rendertarget_type()
}
func ObjectAsRenderTarget(object: Object) => *RenderTarget {
	if object.GetTypeId() == rendertarget_type() {
		ObjectRetain(object.GetRaw())
		return RenderTargetFrom(object.GetRaw())
	}
	return nil
}

/// Gets the width of the rendering target.
func RenderTarget.GetWidth() => i32 {
	return rendertarget_get_width(*this.raw)
}

/// Gets the height of the rendering target.
func RenderTarget.GetHeight() => i32 {
	return rendertarget_get_height(*this.raw)
}

/// Sets the camera used for rendering the scene.
func RenderTarget.SetCamera(val: Camera) {
	rendertarget_set_camera(*this.raw, val.GetRaw())
}

/// Gets the camera used for rendering the scene.
func RenderTarget.GetCamera() => *Camera {
	ptr_ := rendertarget_get_camera(*this.raw)
	if ptr_ == 0 {
		return nil
	}
	obj_ := *CameraFrom(ptr_)
	return &obj_
}

/// Gets the texture generated by the rendering target.
func RenderTarget.GetTexture() => Texture2D {
	return *Texture2DFrom(rendertarget_get_texture(*this.raw))
}

/// Renders a node to the target without replacing its previous contents.
///
/// # Arguments
///
/// * `target` - The node to be rendered onto the render target.
func RenderTarget.Render(target: Node) {
	rendertarget_render(*this.raw, target.GetRaw())
}

/// Clears the previous color, depth and stencil values on the render target.
///
/// # Arguments
///
/// * `color` - The clear color used to clear the render target.
/// * `depth` - Optional. The value used to clear the depth buffer of the render target. Default is 1.
/// * `stencil` - Optional. The value used to clear the stencil buffer of the render target. Default is 0.
func RenderTarget.RenderClear(color: Color, depth: f32, stencil: i32) {
	rendertarget_render_clear(*this.raw, color.ToARGB(), depth, stencil)
}

/// Renders a node to the target after clearing the previous color, depth and stencil values on it.
///
/// # Arguments
///
/// * `target` - The node to be rendered onto the render target.
/// * `color` - The clear color used to clear the render target.
/// * `depth` - The value used to clear the depth buffer of the render target. Default can be 1.
/// * `stencil` - The value used to clear the stencil buffer of the render target. Default can be 0.
func RenderTarget.RenderClearWithTarget(target: Node, color: Color, depth: f32, stencil: i32) {
	rendertarget_render_clear_with_target(*this.raw, target.GetRaw(), color.ToARGB(), depth, stencil)
}

/// Saves the contents of the render target to a PNG file asynchronously.
///
/// # Arguments
///
/// * `filename` - The name of the file to save the contents to.
/// * `handler` - The function to call when the save operation is complete. The function will be passed a boolean value indicating whether the save operation was successful.
func RenderTarget.SaveAsync(filename: string, handler: func(success: bool)) {
	stack0 := NewCallStack()
	func_id0 := PushFunction(func() {
		success, _ := stack0.PopBool()
		handler(success)
	})
	rendertarget_save_async(*this.raw, ToDoraString(filename), func_id0, *stack0.raw)
}
func NewRenderTarget(width: i32, height: i32) => RenderTarget {
	raw := rendertarget_new(width, height)
	object := RenderTarget{}
	object.raw = &raw
	runtime.SetFinalizer(object.raw, ObjectFinalizer)
	return object
}
